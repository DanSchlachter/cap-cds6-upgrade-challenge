{
  "name": "upgradeapp",
  "version": "1.0.0",
  "description": "SAP CAP Application with CDS 6 - Contains patterns that are difficult to upgrade to CDS 7/8/9",
  "main": "server.js",
  "scripts": {
    "start": "cds run",
    "watch": "cds watch",
    "test": "echo '\n⚠️  To run tests:\n1. Start server: npm run watch\n2. In another terminal: npm run test:integration\n' && exit 1",
    "test:integration": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:cds7": "npx -y -p @sap/cds@^7.0.0 cds watch",
    "test:cds8": "npx -y -p @sap/cds@^8.0.0 cds watch",
    "test:cds9": "npx -y -p @sap/cds@^9.0.0 cds watch",
    "compile:cds7": "npx -y -p @sap/cds@^7.0.0 cds compile srv",
    "compile:cds8": "npx -y -p @sap/cds@^8.0.0 cds compile srv",
    "compile:cds9": "npx -y -p @sap/cds@^9.0.0 cds compile srv"
  },
  "keywords": [
    "CAP",
    "CDS6",
    "SAP"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sap/cds": "^6.8.4",
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@sap/cds-dk": "^6.8.3",
    "axios": "^1.13.4",
    "jest": "^29.7.0",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.4"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": "db.sqlite"
        }
      }
    },
    "features": {
      "odata_new_adapter": false
    },
    "sql": {
      "native_hana_associations": true
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 10000,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "srv/**/*.js",
      "!srv/**/*.test.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
